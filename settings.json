{
  "[bigquery]": {
    "editor.tabSize": 2
  },
  "[cpp]": {
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never"
    }
  },
  "[graphql]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.tabSize": 2
  },
  "[sql]": {
    "editor.tabSize": 4
  },
  "[terraform]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "bqExtensionVSCode.diagnostic.dryRunOnSave": false,
  "bqExtensionVSCode.formatting.indentCte": false,
  "bqExtensionVSCode.formatting.printBlankLineAfterCte": true,
  "bqExtensionVSCode.formatting.printKeywordsInUpperCase": false,
  "claudeCode.preferredLocation": "sidebar",
  "debug.onTaskErrors": "showErrors",
  "editor.detectIndentation": false,
  "editor.editContext": false, // fix vim behavior
  "editor.inlineSuggest.edits.showCollapsed": true,
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "trailing",
  "editor.suggest.selectionMode": "never",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "files.eol": "\n",
  "git.blame.editorDecoration.enabled": false,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  "github.copilot.chat.localeOverride": "ja",
  "github.copilot.nextEditSuggestions.enabled": true,
  "go.formatTool": "gofmt",
  "interactiveWindow.executeWithShiftEnter": true,
  "julia.enableTelemetry": false,
  "julia.symbolCacheDownload": true,
  "jupyter.interactiveWindow.creationMode": "perFile",
  "remote.autoForwardPortsSource": "hybrid",
  "security.allowedUNCHosts": ["wsl.localhost"],
  "settingsSync.keybindingsPerPlatform": false,
  "terminal.integrated.commandsToSkipShell": ["language-julia.interrupt"],
  "terminal.integrated.fontFamily": "Hack Nerd Font",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "update.showReleaseNotes": false,
  "vim.foldfix": true,
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "after": ["<Esc>"],
      "before": ["j", "k"]
    },
    {
      "after": ["<right>"],
      "before": ["<C-l>"]
    },
    {
      "after": ["\\"],
      "before": ["Â¥"]
    },
    {
      "after": ["<esc>", "v", "i", "w", "<s-u>", "e", "a"],
      "before": ["<C-g>", "<C-u>"]
    },
    {
      "before": ["<C-i>"],
      "commands": ["inlineChat.start"]
    }
  ],
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["]", "b"],
      "commands": [":tabn"]
    },
    {
      "before": ["[", "b"],
      "commands": [":tabp"]
    },
    {
      "before": ["[", "g"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["]", "g"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "l", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "l", "h"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["workbench.action.showCommands"]
    }
  ],
  "vim.showMarksInGutter": true,
  "vim.useSystemClipboard": true,
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "after": ["<Esc>"],
      "before": ["v"]
    }
  ],
  "workbench.startupEditor": "none"
}
